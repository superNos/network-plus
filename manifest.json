{
	"manifest_version": 2,
	"name": "network-plus",
	"version": "1.0.2",
    "description": "线上页面调试工具",
	"icons": {
		"16": "img/icon.jpg",
		"32": "img/icon.jpg",
		"48": "img/icon.jpg",
		"128": "img/icon.jpg"
	},
	"browser_action": {
		"default_icon": "img/icon.jpg",	
		"default_title": "network-intercept",
		"default_popup": "./popup.html"
	},
	"background": {
		"scripts": ["./script/background.js"],
		"persistent": true
	},
	"devtools_page": "./dist/index.html",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"web_accessible_resources": [
		"script/pageScript.js",
		"script/content.js",
		"dist/index.html"
	],
	"content_scripts": [
		{
		  "matches": [
				"https://30.5.20.227/*",
				"http://30.5.20.227/*",
				"https://juejin.im/*"
			],
		  "js": ["./script/content.js"],
		  "run_at": "document_start",
		  "all_frames": true
		}
	  ],
	"externally_connectable": {
		"matches": [
		  "https://30.5.20.227/*",
		  "http://30.5.20.227/*",
		  "https://juejin.im/*"
		]
	  }
}